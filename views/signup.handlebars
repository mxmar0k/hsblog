<main class="container mt-5">
  <h1 class="mb-4 text-warning">Join the Hearthstone Community</h1>
  <form id="signup-form" class="hearthstone-signup-form">
    <div class="mb-3">
      <label for="username" class="form-label">Hearthstone Username</label>
      <input
        type="text"
        class="form-control"
        id="username"
        placeholder="Hearthstone Username"
      />
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">Email Address</label>
      <input type="email" class="form-control" id="email" placeholder="Email Address" />
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Create a Password</label>
      <input
        type="password"
        class="form-control"
        id="password"
        placeholder="Create a Password"
      />
    </div>
    <button type="submit" class="btn btn-warning">Join the Community</button>
  </form>
</main>
